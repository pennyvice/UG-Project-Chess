<Window x:Class="Chess_User_Interface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chess_User_Interface"
        mc:Ignorable="d"
        Title="Chess"  Width="600" SizeToContent="Height"
        Icon="Assets/icon.ico"
        WindowStartupLocation="CenterScreen"
        Background="DarkOliveGreen">
    <Viewbox>
        <Grid x:Name="BoardGrid"
              Width="600"
              Height= "600" >
            <Grid.Background>
                <ImageBrush ImageSource="Assets/Board.png"/>
            </Grid.Background>

            <UniformGrid x:Name="PieceGrid"
                Rows ="8"
                         Columns="8"
                         RenderOptions.BitmapScalingMode="HighQuality">
                
            </UniformGrid>
        </Grid>
    </Viewbox>

</Window>
